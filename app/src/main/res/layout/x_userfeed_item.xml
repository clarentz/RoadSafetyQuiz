<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/x_box_outline"
    android:gravity="center"
    android:layout_marginBottom="50dp">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- <android.support.v7.widget.Toolbar
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

        </android.support.v7.widget.Toolbar> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userfeed_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="8"
                android:padding="5dp"
                android:textAlignment="inherit"
                android:textColor="@color/grayish"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/userfeed_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="8"
                android:padding="5dp"
                android:textAlignment="inherit"
                android:textColor="@color/pinkish"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/userfeed_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:padding="5dp"
                android:textAlignment="inherit"
                android:textColor="@color/darkoliveish"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/x_box_outline"
            android:gravity="center"
            android:backgroundTint="@color/white">

            <ImageView
                android:id="@+id/userfeed_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_image_thumbnail" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:padding="2dp"
            android:background="@drawable/x_box_outline"
            android:weightSum="7">

            <LinearLayout
                android:id="@+id/userfeed_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@drawable/background_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:scaleType="centerInside">


                <ImageView
                    android:id="@+id/userfeed_like_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/userfeed_likecount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/darkoliveish"/>

            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/x_box_outline"/>

            <ImageView
                android:id="@+id/userfeed_comment"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:background="@drawable/background_selector"
                android:scaleType="centerInside"
                android:src="@drawable/ic_comment" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>