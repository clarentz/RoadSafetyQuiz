<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".Activity.YesNoGameActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="@color/yellowish"
                android:background="@drawable/x_box_outline">

                <TextView
                    android:id="@+id/txtScoreYN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textSize="30dp"
                    android:textColor="@color/darkoliveish"/>

                <ImageView
                    android:id="@+id/comment_seperator_seperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/x_box_outline"/>

                <TextView
                    android:id="@+id/txtQuestionYN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question"
                    android:textSize="25dp"
                    android:textColor="@color/darkoliveish"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgQuestionYN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/x_box_outline"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/yellowish"/>

                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/yellowish"/>

                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellowish"
                    android:text="Stop" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>