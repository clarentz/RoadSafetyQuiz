<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".Activity.MultipleChoicesGameActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:backgroundTint="@color/yellowish"
                android:layout_marginBottom="5dp"
                android:background="@drawable/x_box_outline">

                <TextView
                    android:id="@+id/txtScoreMC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textColor="@color/darkoliveish"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/comment_seperator_seperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/x_box_outline"/>

                <TextView
                    android:id="@+id/txtQuestionMC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question"
                    android:textColor="@color/darkoliveish"
                    android:textSize="25dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgQuestionMC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/x_box_outline"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yellowish"
                    android:layout_marginBottom="5dp"
                    android:text="A" />

                <Button
                    android:id="@+id/btnB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellowish"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:text="B" />

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellowish"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:text="C" />

                <Button
                    android:id="@+id/btnD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellowish"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:text="D" />
            </LinearLayout>

            <Button
                android:id="@+id/btnStopMC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellowish"
                android:layout_gravity="bottom"
                android:text="Stop" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>